// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgres"
  provider = "sqlite"
  url      = env("DB_URL")
}

model User {
  id       Int            @id @default(autoincrement())
  email   String       @unique
  firstName String?
  lastName String?          
  contacts Contact[]
}

model Contact {
  id   Int    @id @default(autoincrement())
  lastName     String
  firstName    String
  phone        Int
  user  User @relation(fields: [userId], references: [id])
  userId    Int
}
